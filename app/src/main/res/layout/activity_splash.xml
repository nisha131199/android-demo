<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cr_F2F2F2"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ivMid"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:src="@drawable/ic_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <com.google.android.material.imageview.ShapeableImageView
      app:shapeAppearance="@style/cr50"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toTopOf="@id/ivBottom"
      app:layout_constraintEnd_toEndOf="@id/ivBottom"
      android:src="@drawable/txt_anish_bond"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/ivBottom"
      app:shapeAppearance="@style/cr50"
      app:layout_constraintStart_toEndOf="@+id/ivMid"
      app:layout_constraintTop_toBottomOf="@+id/ivMid"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:src="@drawable/img_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  </androidx.constraintlayout.widget.ConstraintLayout>